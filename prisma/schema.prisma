datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Companies {
  id        Int     @default(autoincrement()) @id
  cnpj      String  @unique
  name      String
  employees Employees[]
}

model Employees {
  id         Int        @default(autoincrement()) @id
  cpf        String     @unique
  name       String
  email      String     @unique
  company    Companies  @relation(fields: [companyId], references: [id])
  companyId  Int
  assets     Assets[]
}

enum AssetStatus {
  DISPONIVEL
  EM_USO
  EM_MANUTENCAO
}

model Assets {
  id          Int         @default(autoincrement()) @id
  name        String
  type        String
  status      AssetStatus @default(DISPONIVEL)
  employee    Employees?  @relation(fields: [employeeId], references:[id])
  employeeId  Int? 
}
